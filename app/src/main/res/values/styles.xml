<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <!-- 适用于开启滑动返回功能的 Activity -->
    <style name="AppTheme.Transparent">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="mainPageTools">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="mainPageToolsItem">
        <item name="android:drawablePadding">@dimen/mainpage_tools_item_p</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/mainpage_tools_font_s</item>
        <item name="android:textColor">@color/mainpage_tools_font</item>
    </style>

    <style name="myPagerTv">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="loginItemBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/login_input_h</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/login_input_plr</item>
        <item name="android:paddingRight">@dimen/login_input_plr</item>
        <item name="android:background">@drawable/login_input_shape</item>
    </style>

    <style name="login_input">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@null</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/login_input_font_s</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

</resources>
